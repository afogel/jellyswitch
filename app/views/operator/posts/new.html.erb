<% title "New Post" %>

<%= breadcrumb do %>
  <li class="breadcrumb-item"><%= link_to "Bulletin Board", posts_path %></li>
  <li class="breadcrumb-item active" aria-current="page">New Post</li>
<% end %>

<%= render Layout::FullWidth do %>
  <%= list_item do %>
    <h4 class="display-4 text-center">New Post</h4>

    <%= form_with(model: @post, url: posts_path, remote: true) do |f| %>
      <div class="form-group">
        <%= f.label :title %>
        <%= f.text_field :title, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :content, "What would you like to post?" %>
        <%= f.rich_text_area :content %>
      </div>

      <%= f.submit "Post", class: "btn btn-block btn-primary" %>
    <% end %>
  <% end %>
<% end %>