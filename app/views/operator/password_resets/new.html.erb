<%- title "Forgot password" %>

<%= wide_card do %>
  <div class="row">
    <h4 class="display-4 col">Reset password</h4>
  </div>
  <%= form_for(:password_reset, url: password_resets_path, remote: true) do |f| %>
    <div class="form-group row">
      <div class="col-lg-1"></div>
      <div class="col-lg">
        <%= f.email_field :email, placeholder: "Email address", class: "form-control" %>
      </div>
      <div class="col-lg-1"></div>
    </div>

    <div class="form-group row">
      <div class="col-lg-1"></div>
      <div class="col-lg">
        <%= f.submit "Reset my password", class: "btn btn-block btn-primary" %>
      </div>
      <div class="col-lg-1"></div>
    </div>
  <%- end %>
<%- end %>