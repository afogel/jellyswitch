
<% title "Past Events" %>

<%= breadcrumb do %>
  <li class="breadcrumb-item"><%= link_to "What's Happening?", events_path %></li>
  <li class="breadcrumb-item active" aria-current="page">Past Events</li>
<% end %>

<div class="row mt-1 mb-0 p-0">
  <div class="col-lg-3"></div>
  <div class="col-lg-6 m-0 p-0">
    <%= list_wrapper do %>
      <%= list_item do %>
        <h4 class="display-4 text-center">Past Events</h4>
      <% end %>

      <%= render "events_list", events: @events %>

    <% end %>
  </div>
  <div class="col-lg-3"></div>
</div>
