<%= form_for(:session, url: login_path, remote: true) do |f| %>
  <div class="form-group row">
    <div class="col-1"></div>
    <%= f.email_field :email, placeholder: "Email", class: "form-control col" %>
    <div class="col-1"></div>
  </div>
  <div class="form-group row">
    <div class="col-1"></div>
    <%= f.password_field :password, placeholder: "Password", class: "form-control col" %>
    <div class="col-1"></div>
  </div>

  <div class="form-group row">
    <div class="col-1"></div>
    <%= f.submit "Sign In", class: "form-control btn btn-primary col", data: { "turbolinks-action" => "restore" } %>
    <div class="col-1"></div>
  </div>
  <div class="form-group row">
    <div class="col-1"></div>
    <div class="col-sm-7 text-center">
      <small>
        Not a member? <%= link_to "Sign up", signup_path, data: { "turbolinks-action" => "replace" } %>
      </small>
    </div>
    <div class="col-1"></div>
  </div>
  <div class="form-group row">
    <div class="col-1"></div>
    <div class="col-sm-7 text-center">
      <small>
        Forgot your password? <%= link_to "Reset my password", new_password_reset_path, data: { "turbolinks-action" => "replace" } %>
      </small>
    </div>
    <div class="col-1"></div>
  </div>
<%- end %>
