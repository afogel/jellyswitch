<% title "Membership" %>

<%= breadcrumb do %>
  <li class="breadcrumb-item"><%= link_to @user.name, user_path(@user) %></li>
  <li class="breadcrumb-item active" aria-current="page">Membership</li>
<% end %>

<div class="row mt-0 mb-0">
  <div class="col-lg-3"></div>
  <div class="col-lg-6 m-0 pl-0 pr-0">
    <%= list_wrapper do %>
      <%= list_item do %>
        
        <%= render "memberships", user: @user %>

      <% end %>

      <%= list_item do %>
        <h4 class="display-4 text-center mt-4">Pending Membership</h4>
        <%= render "pending_memberships", user: @user %>
      <% end %>
    <% end %>
  </div>
  <div class="col-lg-3"></div>
</div>

