<% title "Invoices" %>

<%= breadcrumb do %>
  <li class="breadcrumb-item"><%= link_to @user.name, user_path(@user) %></li>
  <li class="breadcrumb-item active" aria-current="page">Invoices</li>
<% end %>

<div class="row mt-0 mb-0">
  <div class="col-lg-3"></div>
  <div class="col-lg-6 m-0 pl-0 pr-0">
    <%= list_wrapper do %>
      <%= list_item do %>
        
        <h4 class="display-4 text-center mt-4">Invoices</h4>
          <div class="card-body list-group list-group-flush p-0">
            <%= render(Buttons::NewInvoice, user: @user, classes: "btn btn-primary btn-block") do %>
              <i class="fas fa-dollar-sign"></i>
              &nbsp;
              New Invoice
            <% end %>

            <%= render "invoices", user: @user %>
          </div>
        
      <% end %>
    <% end %>
  </div>
  <div class="col-lg-3"></div>
</div>