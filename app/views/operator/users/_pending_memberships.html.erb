<% if user.subscriptions.pending.count < 1 %>
  <div class="row">
    <div class="col text-center">
      No pending memberships.
    </div>
  </div>
<% else %>
  <% user.subscriptions.for_operator(current_tenant).pending.each do |subscription| %>
    <div class="row mt-3">
      <div class="col text-center">
        <%= subscription.plan.plan_name %>
        <div class="row mt-1">
          <%= link_to "Cancel membership", operator_admin_subscription_path(subscription), method: :delete, remote: true, class: "btn col mr-4 ml-4 btn-danger" %>
        </div>
      </div>
    </div>
  <% end %>
<% end %>