<%= javascript_pack_tag "stripe_handler.js" %>

<%= form_with(url: update_billing_and_create_reservation_reservations_path(room_id: @room.id, day: @day, hour: pretty_time(@hour), duration: @duration), remote: true, html: {id: "stripe-form" }) do |f| %>
  <div class="form-group row">
    <div class="col-1"></div>
    <%= render "shared/billing" %>
    <div class="col-1"></div>
  </div>
  
  <div class="form-group row">
    <div class="col-1"></div>
    <%= f.submit "Add card and confirm reservation", id: 'stripe-submit', class: "form-control btn btn-primary col", data: { acc: 'add-payment', disable_with: "Reserving..." } %>
    <div class="col-1"></div>
  </div>
<% end %>
