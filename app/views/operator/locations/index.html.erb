<% title "Locations" %>

<%= breadcrumb do %>
  <li class="breadcrumb-item"><%= link_to "Customization", customization_path %></li>
  <li class="breadcrumb-item active" aria-current="page">Location Settings</li>
<% end %>

<div class="row mt-0 mb-0">
  <div class="col-lg-3"></div>
  <div class="col-lg-6 m-0 pl-0 pr-0">
    <%= list_wrapper do %>
      <%= list_item do %>
        <h4 class="display-4 text-center">Locations</h4>
        <%= link_to "Add a location", new_location_path, class: "btn btn-block btn-primary" %>
      <% end %>

      <%= render @locations, label: "Switch to" %>
    <% end %>
  </div>
  <div class="col-lg-3"></div>
</div>

