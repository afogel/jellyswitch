<% title "New Invoice" %>

<%= breadcrumb do %>
  <li class="breadcrumb-item"><%= link_to @billable.name, @billable %></li>
  <li class="breadcrumb-item active" aria-current="page">New Invoice</li>  
<% end %>

<div class="row mt-1 mb-0 p-0">
  <div class="col-lg-2"></div>
  <div class="col-lg">
    <%= list_wrapper do %>
      <%= list_item do %>
        <h4 class="display-4 text-center">New Invoice</h4>
        <%= render "form", invoice: @invoice, billable: @billable %>
      <% end %>
    <% end %>
  </div>
  <div class="col-lg-2"></div>
</div>