<% title "Sign In" %>

<%= wide_card do %>
  <h4 class="display-4 text-center">Sign In</h4>

  <%= form_for(:session, url: real_login_path, remote: true) do |f| %>
    <%= render "layouts/flash" %>
    <div class="form-group row">
      <div class="col-1"></div>
      <%= f.email_field :email, placeholder: "Email", class: "form-control col", value: @user.email, readonly: true %>
      <div class="col-1"></div>
    </div>
    <div class="form-group row">
      <div class="col-1"></div>
        <%= f.password_field :password, placeholder: "Enter your password", class: "form-control col" %>
      <div class="col-1"></div>
    </div>
    <div class="form-group row">
      <div class="col-1"></div>
      <%= f.submit "Sign In", class: "form-control btn btn-primary col" %>
      <div class="col-1"></div>
    </div>
    <div class="form-group col"></div>
      <div class="col-1"></div>
      <div class="col-sm-7 text-right">
        <small>
          Not a member? <%= link_to "Sign up", operator_signup_path %>
        </small>
      </div>
    <div class="col-1"></div>
  <% end %>
<% end %>