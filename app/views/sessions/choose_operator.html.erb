<% title "Select Instance" %>

<%= wide_card do %>
  <h4 class="display-4 text-center mt-4">Select an instance to sign in:</h4>
  <ul class="list-group list-group-flush">
    <% @operators.each do |operator| %>
      <li class="list-group-item">
        <%= link_to operator.name, landing_url(subdomain: operator.subdomain), class: "btn btn-primary btn-block stretched-link" %>
      </li>
    <% end %>
  </ul>
<% end %>