<div class="row">
  <div class="col">
    <h5><%= day_pass_type.name.capitalize %></h5>
    Price: <span class="text-success font-weight-bold"><%= number_to_currency(dollar_amount(day_pass_type.amount_in_cents)) %>
  </div>
</div>

<div class="row">
  <div class="col">
    <%= day_pass_type.description %>
  </div>
</div>

<div class="row mt-3">
  <div class="col">
    <%= link_to "Select #{day_pass_type.name}", new_day_pass_path(day_pass_type_id: day_pass_type.id), class: "btn btn-block btn-primary" %>
  </div>
</div>